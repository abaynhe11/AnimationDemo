<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameAnimationActivity">

    <ImageView
        android:id="@+id/target_image_drawable"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_restart_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_stop_restart_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="startStopAnimation"
        android:text="@string/stop_restart_animation"
        app:layout_constraintEnd_toEndOf="@+id/target_image_drawable"
        app:layout_constraintStart_toStartOf="@+id/target_image_drawable"
        app:layout_constraintTop_toBottomOf="@+id/target_image_drawable" />

</androidx.constraintlayout.widget.ConstraintLayout>